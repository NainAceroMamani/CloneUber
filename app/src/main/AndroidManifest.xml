<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nain.cloneuber">
    <!-- PERMISOS DEL APP -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.driver.CalificationClientActivity"></activity>
        <activity android:name=".activities.driver.MapDriverBookingActivity" />
        <activity android:name=".activities.client.MapClientBookingActivity" /> <!-- declaramos el AcceptReciver para que tenga aaceso a la notification btn=> accept, cancel -->
        <receiver
            android:name=".receivers.AcceptReciver"
            android:enabled="true" />
        <receiver
            android:name=".receivers.CancelReciver"
            android:enabled="true" />

        <service android:name=".services.MyFirebaseMessagingClient">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity android:name=".activities.client.RequestDriverActivity" />
        <activity
            android:name=".activities.client.DetailRequestActivity"
            android:parentActivityName=".activities.client.MapClientActivity" />
        <activity android:name=".activities.driver.MapDriverActivity" />
        <activity android:name=".activities.client.MapClientActivity" />
        <activity
            android:name=".activities.driver.RegisterDriverActivity"
            android:parentActivityName=".activities.SelectOptionsAuthActivity" />
        <activity android:name=".activities.LoginActivity" />
        <activity
            android:name=".activities.client.RegisterActivity"
            android:parentActivityName=".activities.SelectOptionsAuthActivity" />
        <activity
            android:name=".activities.SelectOptionsAuthActivity"
            android:parentActivityName=".activities.MainActivity" />
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_api_key" />
    </application>

</manifest>